@{
    ViewData["Title"] = "index";
}

<h1>Estudents</h1>

<p>
    
    <a id="create_student" class="btn btn-primary" asp-area="" asp-controller="Student" asp-action="Create">Create New</a>
</p>


<table id="table_students" class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Address</th>
            <th scope="col">Actions</th>
            
        </tr>
    </thead>
    <tbody id="app_tbody">
        
    </tbody>
</table>

<div id="edit_student" style="display:none;">
    <h1>
        Edit Student
    </h1>
    <div class="row">

        <div class="col-md-6">
            <h3>Student Information</h3>
            <div>
                <label for="id_card">Id Card</label>
                <input id="idCard" type="text" name="idCard" value="" />
            </div>
            <div>
                <label for="name">Name</label>
                <input id="name" type="text" name="name" value="" />
            </div>
            <div>
                <label for="last_name">LastName</label>
                <input id="last_name" type="text" name="last_name" value="" />
            </div>
            <div>
                <label for="age">Age</label>
                <input id="age" type="number" name="age" value="" />
            </div>
            <div>
                <label for="email">Email</label>
                <input id="email" type="text" name="email" value="" />
            </div>
            <div>
                <label for="phone">Phone</label>
                <input id="phone" type="text" name="phone" value="" />
            </div>

            <label for="address">Address</label>
            <input id="address" type="text" name="address" value="" />
        </div>

        <div class="col-md-6">
            <div>
                <div>
                    <h3>Course</h3>
                    <label for="courses">Select Courses</label>
                    <select id="courses" class="custom-select" name="courses" multiple>
                    </select>
                </div>


                <div>
                    <h3>Interesnt</h3>

                    <label for="Entertainment">Entertainment</label>
                    <input id="Entertainment" type="checkbox" name="" value="" />

                    <label for="Gastronomy">Gastronomy</label>
                    <input id="Gastronomy" type="checkbox" name="" value="" />

                    <label for="Fashion">Fashion</label>
                    <input id="Fashion" type="checkbox" name="" value="" />

                    <label for="Travels">Travels</label>
                    <input id="Travels" type="checkbox" name="Travels" value="" />

                    <label for="Home">Home</label>
                    <input id="Home" type="checkbox" name="Home" value="" />

                    <label for="Technology">Technology</label>
                    <input id="Technology" type="checkbox" name="Technology" value="" />

                    <label for="sports">Sports</label>
                    <input id="sports" type="checkbox" name="sports" value="" />

                    <label for="Music">Music</label>
                    <input id="Music" type="checkbox" name="Music" value="" />

                    <label for="HealthAndBeauty">Health And Beauty</label>
                    <input id="HealthAndBeauty" type="checkbox" name="HealthAndBeauty" value="" />

                    <label for="Vehicles">Vehicles</label>
                    <input id="Vehicles" type="checkbox" name="Vehicles" value="" />

                    <label for="Pets">Pets</label>
                    <input id="Pets" type="checkbox" name="Pets" value="" />

                    <label for="ArtAndCulture">Art And Culture</label>
                    <input id="ArtAndCulture" type="checkbox" name="ArtAndCulture" value="" />

                    <label for="Mechanics">Mechanics</label>
                    <input id="Mechanics" type="checkbox" name="Mechanics" value="" />

                    <label for="Books">Books</label>
                    <input id="Books" type="checkbox" name="Books" value="" />

                    <label for="photography">photography</label>
                    <input id="photography" type="checkbox" name="Photography" value="" />

                </div>

            </div>

            <div>
                <h3>Notifications</h3>

                <label for="Email">Email</label>
                <input id="Email" type="checkbox" name="" value="" />

                <label for="Sms">SMS</label>
                <input id="Sms" type="checkbox" name="Sms" value="" />

                <label for="DirectMail">Direct Mail</label>
                <input id="DirectMail" type="checkbox" name="DirectMail" value="" />

                <label for="PhoneCall">PhoneCall</label>
                <input id="PhoneCall" type="checkbox" name="PhoneCall" value="" />
            </div>
        </div>

        <div>
            <button onclick="save()" class="btn btn-success">Update Student</button>
            @*<a class="btn btn-danger" asp-area="" asp-controller="Student" asp-action="Index">Add Student</a>*@
            <a class="btn btn-danger" asp-area="" asp-controller="Student" asp-action="Index">Cancel</a>


        </div>
    </div>

</div>

<script src="~/js/student/student_scripts.js"></script>